{
  "name": "minegame",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "scripts": {
    "lint:all": "yarn lint:code:all && yarn lint:markdown:all",
    "lint:code": "eslint --fix --ignore-path .gitignore --max-warnings=0",
    "lint:code:all": "yarn lint:code .",
    "lint:markdown:all": "yarn lint:markdown:text . && yarn lint:markdown:links .",
    "lint:markdown:text": "markdownlint --fix --ignore-path .gitignore",
    "lint:markdown:links": "remark --use remark-validate-links --use remark-lint-no-dead-urls --ignore-path .gitignore -q -f",
    "typecheck": "tsc --noEmit",
    "typecheck:files": "tsc-files --noEmit src/util/src/*.d.ts",
    "test": "yarn node --experimental-vm-modules $(yarn bin jest) --setupFiles dotenv/config --all",
    "test:watch": "yarn test --setupFiles dotenv/config --watchAll --bail",
    "test:nock:off": "set NOCK_OFF=true NOCK_BACK_MODE=wild && yarn test",
    "test:nock:record": "set NOCK_BACK_MODE=record && yarn test",
    "test:warnings": "yarn node --experimental-vm-modules --trace-warnings $(yarn bin jest) --setupFiles dotenv/config --no-cache",
    "test:warnings:watch": "yarn test:warnings --watchAll --bail",
    "run:esm": "set NODE_ENV=development && yarn node --experimental-specifier-resolution=node --loader ts-node/esm",
    "postinstall": "lefthook install"
  },
  "engines": {
    "node": "^16.15.0"
  },
  "dependencies": {
    "@swc/core": "^1.3.9",
    "chai-subset": "^1.6.0",
    "cli-table3": "^0.6.3",
    "dotenv": "^10.0.0",
    "lodash-es": "^4.17.21",
    "longjohn": "^0.2.12",
    "luxon": "^2.5.2",
    "luxon-business-days": "^2.8.3",
    "markdownlint-cli": "^0.29.0",
    "prompts": "^2.4.2",
    "random": "^3.0.6",
    "remark-gfm": "^3.0.1",
    "seedrandom": "^3.0.5",
    "ts-node": "^10.8.1",
    "yargs": "^17.0.1",
    "zod": "3.18.0"
  },
  "devDependencies": {
    "@arkweid/lefthook": "^0.7.7",
    "@swc-node/register": "^1.5.4",
    "@swc/jest": "^0.2.23",
    "@types/chai": "^4.3.1",
    "@types/chai-as-promised": "^7.1.4",
    "@types/chai-subset": "^1.3.3",
    "@types/chai-things": "^0.0.35",
    "@types/jest": "^29.2.0",
    "@types/lodash-es": "^4.17.6",
    "@types/luxon": "^2.3.2",
    "@types/node": "^15.12.5",
    "@types/prompts": "^2.4.1",
    "@types/seedrandom": "^3.0.1",
    "@typescript-eslint/eslint-plugin": "^5.40.1",
    "@typescript-eslint/parser": "^5.40.1",
    "chai": "^4.3.4",
    "chai-as-promised": "^7.1.1",
    "chai-bignumber": "^3.0.0",
    "chai-things": "^0.2.0",
    "eslint": "^7.31.0",
    "eslint-config-airbnb": "^18.2.1",
    "eslint-config-next": "^12.1.6",
    "eslint-plugin-html": "^5.0.3",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-jsx-a11y": "^6.4.1",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-react": "^7.26.1",
    "eslint-plugin-react-hooks": "^4.2.0",
    "fast-check": "^2.25.0",
    "jest": "^29.2.1",
    "jest-config": "^29.2.1",
    "nanoid": "^3.1.20",
    "nodemon": "^2.0.6",
    "remark-cli": "^10.0.1",
    "remark-lint-no-dead-urls": "^1.1.0",
    "remark-validate-links": "^11.0.2",
    "ts-morph": "^16.0.0",
    "ts-toolbelt": "^9.6.0",
    "tsc-files": "^1.1.3",
    "tsconfig-paths": "^4.1.0",
    "typescript": "^4.8.4"
  }
}
